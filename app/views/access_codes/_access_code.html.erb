<div class="access_code row" id="access_code_<%= access_code.id %>">
	<div class="span4">
		<span class="for"><%= access_code.for %></span>
		<br/>
		<span class="expires_date">
			<% if access_code.expires_at.nil? %>
					Never Expires
				<% else %>
					<i class="icon-calendar"></i> Expires on <%= access_code.expires_at rescue nil %>
				<% end %>
		</span>


	</div>
	<div class="span4">
		<span class="code"><%= access_code.code %></span><br/> <span class="type">personal code</span>
		<% if can? :manage, access_code %>
			<%= link_to student_access_code_path(@student, access_code), method: :delete, class: "grey small remove float-right", data: {remote: true, confirm: "Are you sure?"} do %>
				remove <i class="icon-remove"></i>
			<% end %>
		<% end %>
	</div>
</div>
