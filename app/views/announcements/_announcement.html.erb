<% if local_assigns[:show] == "tr" %>
  <%= render partial: "announcements/displays/tr", locals: { announcement: announcement } %>
<% elsif local_assigns[:show] == "li" %>
    <%= render partial: "announcements/displays/li", locals: { announcement: announcement } %>
<% elsif local_assigns[:show] == "div" %>
  <%= render partial: "announcements/displays/div", locals: { announcement: announcement } %>
<% else %>
  <%= render partial: "announcements/displays/public", locals: { announcement: announcement } %>
<% end %>
