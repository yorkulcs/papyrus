<% if local_assigns[:show] == "tr" %>
  <%= render partial: "attachments/displays/tr", locals: { attachment: attachment } %>
<% elsif local_assigns[:show] == "li" %>
    <%= render partial: "attachments/displays/li", locals: { attachment: attachment } %>
<% elsif local_assigns[:show] == "div" %>
  <%= render partial: "attachments/displays/div", locals: { attachment: attachment } %>
<% else %>
  <%= render partial: "attachments/displays/public", locals: { attachment: attachment } %>
<% end %>
