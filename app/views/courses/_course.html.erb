<% if local_assigns[:show] == "tr" %>
  <%= render partial: "courses/displays/tr", locals: { course: course } %>
<% elsif local_assigns[:show] == "li" %>
    <%= render partial: "courses/displays/li", locals: { course: course } %>
<% elsif local_assigns[:show] == "div" %>
  <%= render partial: "courses/displays/div", locals: { course: course } %>
<% else %>
  <%= render partial: "courses/displays/public", locals: { course: course } %>
<% end %>
