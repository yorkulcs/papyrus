<div class="list-group-item course">
	<h5 class="title">
		<%= link_to course.title, edit_term_course_path(course.term, course) %>
		<span class="course_name hide"><%= course.title %></span>
		<% if @term%>
			<%= link_to edit_term_course_path(@term, course), class: "pull-right" do %>
				<i class="fa fa-edit"></i>
			<% end %>
		<% end %>
	</h5>
	<div class="code small"><%= course.code %></div>
</div>
