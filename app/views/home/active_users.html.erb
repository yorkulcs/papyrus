<% title "Recently Active Users", false %>

<div class="row">
  <div class="col-md-6">
    <%= panel(title: "Recently Active Papyrus Users", icon: "user") do %>
      <div class="row" style="margin-bottom: 10px; ">
        <div class="col-md-4 strong">Name</div>
        <div class="col-md-4 strong">Last Active</div>
        <div class="col-md-4 strong">Logged In</div>
      </div>
      <% @users.each do |u| %>
          <div class="row">
            <div class="col-md-4 distinct"><%= u.name %></div>
            <div class="col-md-4 green"><%= u.last_active_at.strftime("%I:%M:%S %p") if u.last_active_at != nil %></div>
            <div class="col-md-4 trivial"><%= u.last_logged_in_at.strftime("%b %-d, %I:%M %p") if u.last_logged_in_at != nil %></div>
          </div>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= panel(title: "Recently Active Students", icon: "users") do %>
      <div class="row" style="margin-bottom: 10px; ">
        <div class="col-md-4 strong">Name</div>
        <div class="col-md-4 strong">Last Active</div>
        <div class="col-md-4 strong">Logged In</div>
      </div>
      <% @students.each do |s| %>
        <div class="row">
          <div class="col-md-4">
            <%= s.name %>
          </div>
          <div class="col-md-4 green">
            <%= s.last_active_at.strftime("%I:%M:%S %p") if s.last_active_at != nil %>
          </div>
          <div class="col-md-4 trivial">
            <%= s.last_logged_in_at.strftime("%b %-d, %I:%M %p") if s.last_logged_in_at != nil %>
          </div>
        </div>
      <% end %>
      <% if @students.size == 0 %>
        <span class="grey">There are no active students right now.</span>
      <% end %>
    <% end %>
  </div>
</div>
