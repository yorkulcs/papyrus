<% title "Home" %>
<% title_html do %>
	<h1>Dashboard
		<%= link_to "Quick Stats", stats_path, :class => "btn float-right" if can? :show, :stats %>
	</h1>
<% end %>

<div class="row">
	<div class="span6">
		<h4>Recent Items</h4>
		<div class="items push-down">
			<% @recently_worked_with_items.each do |item| %>
				<% @short_view = true %>
				<% @item = item %>
				<%= render :partial => "items/item", :locals => {:item => item } %>
				<% end %>
				
				<% if @recently_worked_with_items.size == 0  %>
					<span class="standout">You have not recent items in your history.</span>
				<% end %>
		</div>
		
	
	</div>
	<div class="span6">
		<h4>My Students</h4>
		<section class="students push-down">	
			<ul class="thumbnails">
				<% @students.each do |student| %>					
					<%= render :partial => "students/student_row", :locals => { :student => student } %>
				<% end %>
			</ul>
		</section>
		
		<% if @students.size == 0  %>
			<span class="weak">	You have no students assigned to you.</span>
		<% end %>
	</div>
</div>




