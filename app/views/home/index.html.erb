<% title "Dashboard", false %>

<div class="row">
	<div class="col-md-6">
		<% if @scan_lists.size > 0 %>
		<%= panel(title: "My Scan Lists", icon: "list") do %>
				<table class="table" id="scan_lists">
					<thead>
						<tr>
							<th>Name</th>
							<th>Status</th>
							<th>Assigned To</th>
							<th>Items #</th>
							<th>Created</th>
						</tr>
					</thead>
					<tbody>
						<% @scan_lists.each do |scan_list| %>
							<%= render partial: scan_list, locals: { show: "tr" } %>
						<% end %>
					</tbody>
				</table>
			<% end %>
		<% end %>

		<%= panel(title: "Work History", icon: "list", styles:"panel-info") do  %>
			<%= render partial: "work_history" %>		
		<% end %>
	</div>
	<div class="col-md-6">
		<% if @scan_items.size > 0 %>
			<%= panel(title: "My Scan Items", icon: "list") do %>
				<table class="table" id="scan_items">
					<thead>
						<tr>
							<th>Summary</th>
							<th>Due Date</th>
						</tr>
					</thead>
					<tbody>
						<% @scan_items.each do |scan_item| %>
							<%= render partial: scan_item, locals: { show: "tr" } %>
						<% end %>
					</tbody>
				</table>
			<% end %>
		<% end %>

		<%= panel(title: "My Students", icon: "users", styles:"panel-warning") do  %>
		<%= @timing %><br/>
		<%= @timing2 %>
			<ul class="list-unstyled">
				<% @students.each do |student| %>
					<%= render student, show: "li" %>
				<% end %>
			</ul>
		<% end %>
	</div>
</div>
