<% title "Listing all items" %>

<% sidebar do %>
	
	<%= link_to new_item_path, class: "action-btn green input-block-level" do %>
		<i class="icon-plus"></i> Create New Item
	<% end %>
	
	<h3>Adding a new item</h3>
	<p>There are three ways to add a new item:</p>
	<ol>
		<li><%= bib_search_solr_label%> Item</li>
		<li><%= bib_search_worldcat_label%> Item</li>	
		<li>Brand New Item</li>
	</ol>
	<p>
		<strong><%= bib_search_solr_label%> Item</strong><br/>
		You can add this item by first searching for it using <%= bib_search_solr_label%> and then clickin on the Add This Item link.
	</p>
	<p>
		<strong><%= bib_search_worldcat_label%> Item</strong><br/>
		You can add this item by first searching for it using <%= bib_search_worldcat_label%> and then clickin on the Add This Item link.
	</p>
	
	<p>
		<strong>Brand New Item</strong><br/>
		To add a new blank item, just click on the link above.
	</p>
	
<% end %>

<%= render partial: "search_items/search_box" %>

<% if  @search_results == "local" %>			
	<%= render template: "items/papyrus_results"%>
<% elsif @search_results == BibRecord::SOLR %>	
	<%= render  template: "items/solr_results"%>
<% elsif @search_results == BibRecord::WORLDCAT %>
	<%= render  template: "items/solr_results"%>	
<% end %>


<script type="text/javascript">
$(document).ready(function(){ 
	$(".search_items_button").click(function() { 		
		$("#omni_search_form").attr("action", $(this).attr("href"));	
		$("#omni_search_form").submit();
		return false;
	});	
});
	
</script>