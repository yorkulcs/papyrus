<div class="solr-results">
	<% unless @docs.nil? || @docs.size == 0 %>
		<p><strong>Displaying <%= " #{@docs.count}" if @docs %> closest matches</strong></p>
	
	
		<table class="table">
			<tbody>
				<% @docs.each_with_index do |item, index| %>
				<% item = OpenStruct.new item %>
					<tr>
						<td class="count hidden-phone"><%= index + 1 %>.</td>
						<td class="record">						
							<h2><%= item.title %></h2>			
						
							<div class="list-group">
	
								<li class="list-group-item">
									<span class="badge">Author</span>
									<p class="list-group-item-text"><%=  item.author.join(", ")%></p>
								</li>
	
								<li class="list-group-item">
									<span class="badge">Publisher</span>
									<p class="list-group-item-text">
										<%= format_worldcat_field item.publisher %> <span class="trivial">Published: n/a</span></p>
								</li>
								
								
								<li class="list-group-item">
									<span class="badge">Edition + Language</span>
									<p class="list-group-item-text">
										<%= format_worldcat_field item.edition, "Edition" %>  									
									</p>
								</li>
								
								<li class="list-group-item">
									<span class="badge">ISBN + Call Number</span>
									<p class="list-group-item-text">
										<%= format_worldcat_field item.isbn, "ISBN" %> &amp; 
									</p>
								</li>
					
								
								<li class="list-group-item">
									<span class="badge">Format + Description</span>
									<p class="list-group-item-text">
										<%= format_worldcat_field item.physical_description, "Description" %>  
									</p>
								</li>
																												
							</div>
							<a href="<%= new_item_path %>?bib_record_id=<%= item.id%>&amp;type=<%= BibRecord::WORLDCAT %>" data-confirm="Are you sure?" class="visible-phone btn">
								Add This Item <i class="icon-caret-right"></i>
							</a>																																								  
						</td>
						<td class="cover hidden-phone">
							<a href="<%= new_item_path %>?bib_record_id=<%= item.id %>&amp;type=<%= BibRecord::WORLDCAT %>" data-confirm="Are you sure?" class="hidden-phone btn">
								Add This Item <i class="icon-double-angle-right "></i>
							</a>
							 <div class="thumbnail">
								<% if item.isbn %>
									<%= image_tag "http://www.library.yorku.ca/find/bookcover.php?isn=#{item["isbn"].first.gsub(/[^0-9]+/, '')}&size=medium" %>				
								<% else %>
									<span class="trivial">Unvailable</span><br/>
									Cover Image 
								<% end %>
							</div>
						</td>
					</tr>
				
				<% end %>
			</tbody>
		</table>	
	<% else %>
		<div class="blank-slate">
			<i class="icon-question-sign"></i>
			<h1>No Search Terms</h1>
			<p>Please specify a search term in the search box.</p>
		</div>
	<% end %>
</div>