<% title "My Access Codes", false %>

<div class="row">
	<div class="col-md-12 access_codes">
		<%= panel(title: "My Access Codes", icon: "lock") do %>

			<ul id="current_codes" class="list-unstyled">
				<% (@student.access_codes.active + AccessCode.active.shared).each do |access_code| %>
					<%= render partial: "access_codes/access_code", locals: { show: "li", access_code: access_code } %>
				<% end %>
			</ul>
			<% if (@student.access_codes.active.size + AccessCode.active.shared.size)== 0 %>
				<p>You currently do not have any <strong>active</strong> access codes.</p>
			<% end %>

		<% end %>
	</div>
</div>
