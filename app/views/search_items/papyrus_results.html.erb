<table class="table table-bordered table-striped table-responsive">
  <tr class="heading">

    <th>Title</th>
    <th>Author</th>
    <th>Edition</th>
    <th>ISBN</th>
    <th><i class="fa fa-users"></i></th>
    <th><i class="fa fa-file"></i></th>
  </tr>
  <% @items.each_with_index do |item, index| %>
    <%= render "items/item_row", item: item %>
  <% end %>
</table>
