

  <h3> Without Encoding Fields</h3>
  <table class="table">
    <tbody>
      <% @docs.each_with_index do |item, index| %>
        <tr>
          <td class="count hidden-phone" valign="top"><%= index + 1 %>.</td>
          <td class="record" valign="top">

              <strong><%=  item["title_full"]rescue "On Title "%></strong><br/>
              <small><%=  (item["author"] ? item["author"] : item["author2"] ? item["author2"].join(", ") : "") rescue "On Author"%></small>


            <hr/>
          </td>
        </tr>

      <% end %>
    </tbody>
  </table>
  <hr/>

