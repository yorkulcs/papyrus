<% title "Bib Search Settings" %>

<% title_html do %>
	<h1>Bib Search Settings</h1>
<% end%>


<% sidebar do %>
  <h3>Bib Search Help</h3>
	<p class="alert alert-danger"><strong>Warning:</strong> Changing these values might disable BibCat Search capabilities. Please be careful.</p>
	<dl>
		<dt>VuFIND Url</dt>
		<dd>The url to VuFIND index. This is where the search query would be sent</dd>
		<dt>ID Prefix For VuFIND Items</dt>
		<dd>When importing from VuFIND, <%= PapyrusSettings.app_name %> will use VuFIND Item id with this prefix as a unique ID for new item.</dd>
		<dt>VuFIND Search Label</dt>
		<dd>The Name of the VuFIND Search to display in the Items search page. i.e. VuFind</dd>
		<hr/>
		<dt>API Key</dt>
		<dd>A unique key that allows Papyrus to search WORLDCAT database.</dd>
		<dt>ID Prefix For WORLDCAT Items</dt>
		<dd>When importing from WORLDCAT, <%= PapyrusSettings.app_name %> will use WORLDCAT Item id with this prefix as a unique ID for new item.</dd>
		<dt>WORLDCAT Search Label</dt>
		<dd>The Name of the WORLDCAT Search to display in the Items search page. i.e. Worldcat</dd>
	</dl>
<% end %>


<%= simple_form_for PapyrusSettings, url: settings_path, method: :patch do |f| %>


<h3>VuFIND Settings</h3>

<div class="row">
  <div class="span8">
    <%= f.label :vufind_url, "VuFIND Url"%>
    <%= f.input :vufind_url, label: false, input_html: { class: "input-block-level" }%>
  </div>
</div>
<div class="row">
  <div class="span8">
    <%= f.label :vufind_id_prefix, "ID Prefix For VuFIND Items"%>
    <%= f.input :vufind_id_prefix, label: false, input_html: { class: "input-block-level" }%>
  </div>
</div>
<div class="row">
  <div class="span8">
    <%= f.label :vufind_label, "VuFIND Search Label"%>
    <%= f.input :vufind_label, label: false, input_html: { class: "input-block-level" }%>
  </div>
</div>

<h3>WORLDCAT Settings</h3>

<div class="row">
  <div class="span8">
    <%= f.label :worldcat_key, "API Key"%>
    <%= f.input :worldcat_key, label: false, input_html: { class: "input-block-level" }%>
  </div>
</div>
<div class="row">
  <div class="span8">
    <%= f.label :worldcat_id_prefix, "ID Prefix for WORLDCAT Items"%>
    <%= f.input :worldcat_id_prefix, label: false, input_html: { class: "input-block-level" }%>
  </div>
</div>
<div class="row">
  <div class="span8">
    <%= f.label :worldcat_label, "WORLDCAT Search Label"%>
    <%= f.input :worldcat_label, label: false, input_html: { class: "input-block-level" }%>
  </div>
</div>


  	<input type="hidden" name="return_to" value="bib_search"/>
	<%= f.submit "Save Settings", class: "btn btn-success" %>
<% end %>
