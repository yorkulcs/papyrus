<% title "Quick Statistics", false %>

<div class="row">
	<div class="col-md-12">
		<%= panel(title: "Reports Home") do %>
			<%= render partial: "stats/shared/nav_menu" %>

			<br/>

			<div class="row">
				<div class="col-md-4">

					<ul class="list-group">
						<li class="list-group-item disabled">
							<span class="strong black">Item Statistics</span>
						</li>
					  <li class="list-group-item">
					    <span class="badge"><%= Item.count %></span>
					    Total Number of Items
					  </li>
						<li class="list-group-item">
					    <span class="badge"><%= @has_attachments_count %></span>
					    Items with Files Attached
					  </li>
						<li class="list-group-item">
					    <span class="badge"><%= @has_students_count %></span>
					    Items Assigned to Students
					  </li>
					</ul>

				</div>
				<div class="col-md-4">

					<ul class="list-group">
						<li class="list-group-item disabled">
							<span class="strong black">Student Statistics</span>
						</li>
						<li class="list-group-item">
							<span class="badge"><%= Student.count %></span>
							Total Number of Students
						</li>
						<li class="list-group-item">
							<span class="badge"><%= Student.active.count %></span>
							Active Students
						</li>
						<li class="list-group-item">
							<span class="badge"><%= Student.inactive.count %></span>
							Inactive Students
						</li>
					</ul>

				</div>
				<div class="col-md-4">

					<ul class="list-group">
						<li class="list-group-item disabled">
							<span class="strong black">Miscellaneous Statistics</span>
						</li>
						<li class="list-group-item">
							<span class="badge"><%=  User.not_students.active.count %></span>
				 			Active Papyrus Users
						</li>
						<li class="list-group-item">
							<span class="badge"><%= User.not_students.inactive.count %></span>
							Inactive Papyrus Users
						</li>
						<li class="list-group-item">
							<span class="badge"> <%= Term.count %> | <%= Course.count %> </span>
							Terms and Courses
						</li>
					</ul>
				</div>
			</div>

		<% end %>
	</div>
</div>
<div class="row">

</div>
