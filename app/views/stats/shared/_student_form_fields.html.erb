<table class="table">
  <tr>
    <th>
      <h5>Coordinator</h5>

      <select name="coordinator">
        <option value="any">Any</option>
        <%= options_from_collection_for_select(User.transcription_assitants, 'id', 'name' , @coordinator.try(:id)) %>
      </select>
    </th>
    <th>
      <h5>Assistant</h5>
      <select name="assistant">
        <option value="any">Any</option>
        <%= options_from_collection_for_select(User.transcription_assitants, 'id', 'name' , @assistant.try(:id)) %>
      </select>
    </th>
    <th>
      <h5>Date Range [start - end]</h5>
      <input type="text" name="start_date" value="<%= @start_date %>" class="datepicker"/> -
      <input type="text" name="end_date" value="<%= @end_date %>" class="datepicker"/>
    </th>
    <th>
      <h5>Status</h5>
      <select name="status">
        <%= options_for_select([ "Any", "Active", "Inactive" ], params[:status]) %>
      </select>
    </th>
  </tr>
  <tr>
    <td colspan="4">
      <br/>
      <div class="text-align-right">
        <input type="submit" value="Generate" class="btn btn-primary" style="margin-top: -8px;">
      </div>
    </td>
  </tr>
</table>
