


<%= simple_form_for @student_details, :url => student_details_path(@student), :html => { :class => "form-vertical standout" } do |f| %>

<div class="standout">
	<div class="row">
		<div class="span4">
			<h5 class="section">Registration Details</h5>
			<%= f.label :requires_orientation %>
			<%= f.input :requires_orientation, label: false, as: :radio %>
			<%= f.input :request_form_signed_on, as: :string, label:  "Request Form Signed On" , input_html: { class: "datepicker" }  %>
			<%= f.input :intake_appointment_on, as: :string, label: "Intake Appointment Date", input_html: { class: "datepicker" }   %>
		</div>
		<div class="span4">
			<h5 class="section">Contact Information</h5>	
	    	<%= f.input :home_phone %>
	    	<%= f.input :campus_phone %>
	    	<%= f.input :work_phone %>
		</div>
	</div>
</div>

<div class="row">
	<div class="span8">
		<h5 class="section">Disability Information</h5>
		<label class="inline checkbox"><%= f.check_box :di_ld %> LD</label>
		<label class="inline checkbox"><%= f.check_box :di_low_vision %> Low Vision</label>
		<label class="checkbox inline"><%= f.check_box :di_blind %> Blind</label>
		<label class="checkbox inline"><%= f.check_box :di_braille_labels_required %> Braille Labels Required</label>	
		<label class="checkbox inline"><%= f.check_box :di_head_injury %> Head Injury</label>
		<label class="checkbox inline"><%= f.check_box :di_partially_sighted %> Partially Sighted</label>
		<label class="checkbox inline"><%= f.check_box :di_other %> Other</label>
		<hr/>
		<%= f.input :di_note, as: :text,  label: "Note", input_html: {rows:5, class: "span5" } %>
	</div>
	
</div>

<div class="row">
	<div class="span4">
		<h5 class="section">Service Provider</h5>
		<label class="checkbox inline"><%= f.check_box :sp_psmds %> PSMDS</label>
 		<label class="checkbox inline"><%= f.check_box :sp_lds %> LDS</label>
 		<label class="checkbox inline"><%= f.check_box :sp_mhds %> MHDS</label>
		<br/>
 		<label class="checkbox inline"><%= f.check_box :sp_glendon_counselling %> GLENDON COUNSELLING</label>
		<hr/>
		<%= f.input :wrms_ref_number, label: "WRMS REF #",  input_html: { class: "span4" }  %>
	</div>
	<div class="span4">
		<h5 class="section">Preferred Format</h5>
		<label class="checkbox inline"><%= f.check_box :format_pdf %> PDF</label>
		<label class="checkbox inline"><%= f.check_box :format_kurzweil %> KURZWEIL</label>
		<label class="checkbox inline"><%= f.check_box :format_daisy %> DAISY</label>
		<label class="checkbox inline"><%= f.check_box :format_braille %> BRAILLE</label>
		<br/>
		<label class="checkbox inline"><%= f.check_box :format_word %> WORD DOCUMENT</label>		
		<label class="checkbox inline"><%= f.check_box :format_large_print %> LARGE PRINT</label>
		<hr/>
		<%= f.input :pf_note, as: :string, label: "Note", input_html: { class: "span4" } %>
	</div>
</div>

<hr/>
<div class="row">
	<div class="span4">		
		<h5 class="section">Manager Use</h5>
		<%= f.input :ppy_access_granted_on, as: :string, label: "PPY Access Granted", input_html: { class: "datepicker"}   %>
	</div>
	<div class="span4">
		<h5 class="section">&nbsp;</h5>
		<%= f.input :adaptive_computed_access_granted_on, as:  :string, label: "Adaptive Computer Access Granted", input_html: { class: "datepicker"}  %>
	</div>	
</div>


<hr/>
<div class="row">
	<div class="span4 offset4" style="text-align: right;">
	  <%= f.button :submit, class: 'btn btn-primary' %>
	  <%= link_to 'Cancel', student_path(@student), class: 'btn' %>
	</div>
</div>

<% end %>

<script type="text/javascript">
	$(document).ready(function() {
		$( ".datepicker" ).datepicker({ dateFormat: 'yy-mm-dd' });	
	});
</script>
