<div id="urls_<%= item.id %>" class="hide alert alert-block alert-info">
	<ul>
		<% if item.attachments.urls.available.size > 0 %>		
			<% item.attachments.urls.available.each do |a| %>	 	
				<li><%= a.url %></li>
			<% end %>	
		<% else %>
				<li>There are no links available for this item.</li>
		<% end %>
	</ul>
</div>
