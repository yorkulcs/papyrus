
<%= simple_form_for @student do |f| %>

  <div class="standout">
		<div class="row">
			<div class="span4">
				<%= f.label :name, "Full Name" %>
				<%= f.input :name, label: false, input_html: { class: "input-block-level" } %>
				<%= f.label :email, "Email Address" %>
				<%= f.input :email,label: false, input_html: { class: "input-block-level" } %>
				<%= f.label :username, "Login Username" %>
				<%= f.input :username, hint: username_hint, label: false, input_html: { class: "input-block-level" } %>
		  	</div>

			<div class="span4">
				<%= f.fields_for :student_details do |builder| %>
					<%= builder.label :student_number, "Student Number" %>
					<%= builder.input :student_number, label: false, input_html: { class: "input-block-level" }  %>

					<%= builder.label :preferred_phone, "Preferred Number" %>
					<%= builder.input :preferred_phone, label: false, input_html: { class: "input-block-level" } %>

					<%= builder.label :cds_adviser, "Disablities Counsellor" %>
					<%= builder.input :cds_adviser, hint: "Disablities Counsellor is in charge of the student record.", label: false, input_html: { class: "input-block-level" } %>

				<% end %>
			</div>
		</div>

		<hr/>

		<%= f.fields_for :student_details do |builder| %>
			<div class="row">
				<div class="span4">
					<%= builder.label :transcription_coordinator_id, "Transcription Coordinator" %>
					<%= builder.input :transcription_coordinator_id, label: false,  collection: User.transcription_assitants, input_html: { class: "input-xlarge" }  %>
				</div>
				<div class="span4">
					<%= builder.label :transcription_assistant_id, "Transcription Assistant" %>
					<%= builder.input :transcription_assistant_id, label: false, collection: User.transcription_assitants, input_html: { class: "input-xlarge" }  %>
				</div>
			</div>
		<% end %>
	</div>

	<hr/>
	<div class="row">
		<div class="span4 offset4" style="text-align: right;">
     	<%= f.button :submit,  @student.new_record? ? "Register Student" : "Update Student Registration" , class: 'btn btn-primary' %>
     	<%= link_to 'Cancel', @student.new_record? ? students_path : student_path(@student), class: 'btn' %>
		</div>
	</div>

<% end %>
