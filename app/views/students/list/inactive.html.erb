<% title "Inactive  Students", false %>

<div class="row">
	<div class="col-md-12">
		<%= panel(title: "Inactive Students", icon: "ban") do %>

		<div class="row">
			<div class="col-sm-12 col-xs-12">
				<%= render partial: "students/list/links.html.erb" %>
			</div>
		</div>

		<hr/>
		<% if @students %>
			<%= page_entries_info @students %>
		<% end %>

		<%= paginate @students %>

		<ul class="list-unstyled" id="students">
			<% @students.each do |student| %>
			  <li  class="student" id="student_<%= student.id %>">

					<div class="media">
						<a href="<%= student_path(student) %>" class="gravatar pull-left">
							<%= gravatar(student.email, style: "mm", force: true) %>
						</a>

						<div class="pull-right">
							<%= link_to reactivate_student_path(student), data: { remote: true, confirm: 'Are you sure?'}, class: "red" do %>
							Reactivate?
							<% end %>
						</div>

						<div class="media-body">

								<h4 class="media-heading">
									<a href="<%= student_path(student) %>"><%= student.name %></a>

									<% if student.blocked? %>
										<span class="label label-danger black tiny"> Blocked</span>
									<% end %>
                  <% if student.inactive? %>
                    <span class="label label-primary black tiny"> Inactive</span>
                  <% end %>
									<% if student.lab_access_only? %>
										<span class="label label-warning black tiny"> Lab Access Only</span>
									<% end %>

								</h4>

								<div class="row">
									<div class="col-sm-8 col-md-8">
										<i class="fa fa-envelope fa-fw"></i> <%= student.email %><br/>
										<span title="Coordinator"><i class="fa fa-map-signs fa-fw"></i> <%= format_field student.details.coordinator.name rescue nil %></span>
									</div>
									<div class="col-sm-4 col-md-4">
										<i class="fa fa-phone fa-fw"></i> <%= student.details.preferred_phone %><br/>
										<span title="Assistant"><i class="fa fa-adn fa-fw" title="assistant"></i> <%= format_field student.details.assistant.name rescue nil %></span>
									</div>

								</div>

						</div>


					</div>
			  </li>
			<% end %>

		</ul>

		<%= paginate @students %>

		<% if @students.size == 0 %>
			<div class="student blank-slate">
				<i class="fa fa-user"></i>
				<h1>Inactive Students</h1>
				<p>There are no inactive students in Papyrus right now.</p>
			</div>
		<% end %>

		<% end %>
	</div>
</div>
