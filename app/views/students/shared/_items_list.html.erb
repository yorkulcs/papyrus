<%= panel(title: "Assigned Items", icon: "book", icon_class: "fa-2x", title_class: "panel-top text-center", styles:"panel-info") do %>

  <% unless student.inactive? %>
    <a data-toggle="modal" href="#assign_items_modal" class="btn btn-small btn-primary float-right">
      <i class="icon-plus-sign icon-white"></i> Assign Items</a>
  <% end %>

  <ul class="unstyled">
    <% @items.each do |item| %>
      <%= render item, show: "li" %>
    <% end %>
  </ul>

<% end %>
