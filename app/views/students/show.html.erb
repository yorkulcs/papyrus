<% title @student.name %>
<% title_html do %>
	<h1>Student Registration Record</h1>	
<% end%>



<% sidebar do %>
	<%= render partial: "students/shared/sidebar"%>
<% end %>




<% if @student.blocked %>
	<div class="blocked">
		
		<div class="message">
			<span>This user has been temporarily blocked from being edited by the staff.</span>
			<% if can? :unblock, Student %>
				<a href="<%= unblock_student_path(@student) %>" class="float-right btn btn-danger">Unblock</a>
			<% end %>
		</div>			
	</div>
<% end %>





<%= render partial: @student %>			
	
<div class="student-extended">
		
		<%= render partial: "students/shared/subnav"%>
		<%= render partial: "items"%>		
		
</div>








