<% title "School Terms and Courses", false %>


<% sidebar do %>
	<h3>Recently Expired Terms</h3>
	<ul>
		<% @archived_terms.each do |term| %>
			<li><%= link_to "#{term.name}", term %> <br/><span class="trivial">expired on  <%= term.end_date.strftime("%b %d, %Y") %></span></li>
		<% end %>
	</ul>
<% end %>

<div class="row">
	<div class="col-md-12">
		<%= panel(title: "Terms and Courses", icon: "university") do %>
		<div class="row">

			<div class="col-sm-4 col-xs-4">
				<form action="<%= search_courses_terms_path %>" class="form-search">
				<div class="input-group">
					<span class="input-group-addon"><i class="fa fa-search"></i></span>
					<input type="text" placeholder="Search Course Code or Name" name="q" class="form-control search-query"  value="<%= params[:q].try(:strip) %>">
				</div>
				</form>
			</div>

			<div class="col-sm-8 col-xs-8">
				<%= link_to new_term_path, class: "btn btn-sm btn-primary  pull-right" do %>
					<i class="fa fa-plus"></i> Add a New Term
				<% end %>
			</div>
		</div>

		<hr/>

		<% end %>
	</div>
</div>


<section class="terms">

	<% for term in @terms %>
		<div class="thumbnail term clearfix">

			<%= image_tag "icons/calendar-#{cycle('odd','even')}.png", :class => "float-left" %>
			<div style="margin-left: 60px;">
					<div class="course-count float-right"><span class="badge small"><%= pluralize(term.courses.count, "Course") %></span></div>
					<h3><%= link_to "#{term.name}", term %> </h3>
					<span class="trivial"><%= term.start_date.strftime("%b %d, %Y") %> <span class="weak">to</span> <%= term.end_date.strftime("%b %d, %Y") %></span>
			</div>


		</div>
	<% end %>

</section>
