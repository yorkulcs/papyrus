<% title "#{@user.name} - Audit Trail" %>
<% title_html do %>
	<h1><%= @user.name %> - Audit Trail
		<% if @user.inactive? %>
			<span class="red">Inactive</span>
		<% end %>
	</h1>
<% end%>

<%= link_to users_path do %>
	<i class="icon-arrow-left"></i> Back to User's list
<% end %>

<div class="student-extended">

	<section id="audit_trail">
		<h2>Audit Trail</h2>

		<%= render partial:"audit_trail/trail", locals: {:audits_grouped => @audits_grouped}%>
	</section>

</div>
